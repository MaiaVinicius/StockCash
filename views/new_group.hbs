<div class="container">
    <br>
    <form action="/groups/new" method="post" id="new_user">
        <div class="row">
            <div class="col-md-3">
                <label for="">Nome</label>
                <input type="text" required name="name" class="form-control">
            </div>
            <div class="col-md-3">
                <label for="">Membros</label>
                <select name="members" required multiple id="" name="members" class="form-control">
                    {{#each users}}
                        <option value="{{this.id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <button class="btn btn-primary">
                Criar Grupo
            </button>
        </div>
    </form>
</div>