<div class="container">
    <br>
    <form method="post" action="/competitions/new">
        <div class="row">
            <div class="col-md-3">
                <label for="">Nome da competicao</label>
                <input type="text" required name="name" class="form-control">
            </div>
            <div class="col-md-3">
                <label for="">Data de inicio</label>
                <input type="date" required name="start_at" class="form-control">
            </div>
            <div class="col-md-3">
                <label for="">Data de termino</label>
                <input type="date" required name="end_at" class="form-control">
            </div>
            <div class="col-md-3">
                <label for="">Grupos</label>
                <select name="groups" required multiple id="" name="groups" class="form-control">
                    {{#each groups}}
                        <option value="{{this.id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <button class="btn btn-primary">
                Criar Competicao
            </button>
        </div>
    </form>
</div>