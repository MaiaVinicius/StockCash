<div class="container">
    <br>
    <form action="/users/new" method="post" id="new_user">
        <div class="row">
            <div class="col-md-3">
                <label for="">Nome</label>
                <input type="text" required name="name" class="form-control">
            </div>
            <div class="col-md-3">
                <label for="">E-mail</label>
                <input type="email" name="email" class="form-control">
            </div>
            <div class="col-md-3">
                <label for="">Username</label>
                <input type="test" required name="username" class="form-control">
            </div>
            <div class="col-md-3">
                <label for="">Senha</label>
                <input type="password" required name="password" class="form-control">
            </div>
            <div class="col-md-3">
                <label for="">Faculdade</label>
                <select name="college_id" required id="" name="college_id" class="form-control">
                    {{#each colleges}}
                        <option value="{{this.id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="col-md-3">
                <br>
                <button class="btn btn-primary">
                    Registrar
                </button>
            </div>
        </div>
    </form>
</div>